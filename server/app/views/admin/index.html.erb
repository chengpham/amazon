<h1>Admin Panel</h1>

<br/><br/>
<h2>Summary</h2>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Number of Products</th>
            <th>Number of Reviews</th>
            <th>Number of Users</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @products.count %></td>
            <td><%= @reviews.count %></td>
            <td><%= @users.count %></td>
        </tr>          
    </tbody>
</table>
<br><br>

<h2>Products</h2>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Owner</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.title, product %></td>
            <td><%= product.user.email %></td>
        </tr> 
        <% end %>          
    </tbody>
</table>
<br><br>

<h2>Users</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
        </tr> 
        <% end %>          
    </tbody>
</table>

<h2>IP Addresses</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>IP Address</th>
            <th>Username</th>
            <th>Latitude</th>
            <th>Longitude</th>
        </tr>
    </thead>
    <tbody>
        <% @ipaddresses.each do |ipaddress| %>
        <tr>
            <td><%= ipaddress.id %> </td>
            <td><%= link_to(ipaddress.ip, user_ip_path(ipaddress.id) )%> </td>
            <td><%= link_to(ipaddress.user, user_ip_path(ipaddress.id) )%> </td>
            <td><%= ipaddress.latitude %> </td>
            <td><%= ipaddress.longitude %> </td>
        </tr> 
        <% end %>          
    </tbody>
</table>
<br><br>